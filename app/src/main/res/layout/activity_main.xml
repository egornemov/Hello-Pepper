<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_joke_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/joke_holder_hint"
        android:autofillHints="string"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/b_say_goodbye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_say_goodbye"
        app:layout_constraintTop_toBottomOf="@+id/et_joke_holder"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/b_make_joke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_make_joke"
        android:backgroundTint="@android:color/holo_red_light"
        app:layout_constraintTop_toBottomOf="@+id/b_say_goodbye"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>